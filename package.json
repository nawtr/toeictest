{
  "name": "micro-init",
  "version": "1.0.0",
  "license": "teic-test",
  "description": "My Moleculer microservices project",
  "scripts": {
    "dev": "nodemon -L --exec moleculer-runner --repl --hot src/services",
    "start": "moleculer-runner",
